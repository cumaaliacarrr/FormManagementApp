@model List<FormManagementApp.Entity.Form>
@{
    ViewBag.Title = "Index";
}

<h2>Index</h2>
<button type="button" class="btn btn-primary btn-lg" data-toggle="modal" data-target="#ornekModal" id="btnbtn">
    Add New Form
</button>

<div class="modal fade" tabindex="-1" role="dialog" id="ornekModal">
    <div class="modal-dialog">
        <div class="modal-content">
            <div class="modal-header">
                <h5 class="modal-title" id="exampleModalLabel">New message</h5>
                <button type="button" class="btn-close" data-bs-dismiss="modal" aria-label="Close"></button>
            </div>
            <div class="modal-body">
                <form>
                    <div class="mb-3">
                        <label for="recipient-name" class="col-form-label">Form Name:</label>
                        <input type="text" class="form-control" id="formName">
                    </div>
                    <div class="mb-3">
                        <label for="recipient-name" class="col-form-label">Form Description:</label>
                        <input type="text" class="form-control" id="formDescription">
                    </div>
                    <div class="mb-3">
                        <label for="recipient-name" class="col-form-label">Form CreatedBy:</label>
                        <input type="text" class="form-control" id="formCreatedBy">
                    </div>
                    <div class="mb-3">
                        <label for="recipient-name" class="col-form-label">Name :</label>
                        <input type="text" class="form-control" id="name">
                        <div id="NameError" class="invisible"> Name Required</div>
                    </div>
                    <div class="mb-3">
                        <label for="recipient-name" class="col-form-label">SurName:</label>
                        <input type="text" class="form-control" id="surname">
                        <div id="SurNameError" class="invisible">SurName Required</div>
                    </div>
                    <div class="mb-3">
                        <label for="recipient-name" class="col-form-label">Yas:</label>
                        <input type="text" class="form-control" id="yas">
                    </div>
                  
                </form>
            </div>

            <div class="modal-footer">
                <button type="button" class="btn btn-default" data-dismiss="modal" id="MdlClose">Kapat</button>
                <button type="submit" class="btn btn-primary" id="MdlSave">Değişiklikleri Kaydet</button>
            </div>
        </div>
    </div>
</div>



@foreach (var item in Model)
{
    <div class="row">
        <div class="col-3">@item.Name</div>
        <div class="col-3">@item.Description</div>
        <div class="col-3">@item.CreatedAt</div>
        <div class="col-3">@item.CreatedBy</div>
        <div class="col-3">
            <a href="/Form/Details/@item.Id" class="btn btn-primary btn-sm">İncele</a>
            <a href="/Form/Edit/@item.Id" class="btn btn-primary btn-sm">Edit</a>
            <input type="hidden" name="ProductId" value="@item.Id">
            <a href="/Form/Delete/@item.Id" class="btn btn-danger btn-sm">Delete</a>
        </div>
    </div>
}